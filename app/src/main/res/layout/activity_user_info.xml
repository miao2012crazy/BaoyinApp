<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_176"
            android:background="#f14e3d"
            android:orientation="horizontal">
            <ImageView
                android:background="@drawable/example_01"
                android:layout_width="@dimen/dp_78"
                android:layout_height="@dimen/dp_78"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_50" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_14"
                android:text="卖女孩的小火柴"
                android:textColor="#fff"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_user_info"
            android:background="#fff"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView

                android:layout_marginStart="@dimen/dp_6"
                android:layout_centerVertical="true"
                android:src="@mipmap/user_1"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:id="@+id/imageView" />
            <TextView
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView"
                android:text="个人信息" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_right"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_name"
            android:background="#fff"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:layout_marginStart="@dimen/dp_6"
                android:layout_centerVertical="true"
                android:src="@mipmap/user_2"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:id="@+id/imageView1" />
            <TextView
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView1"
                android:text="修改用户名" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_right"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_psd"
            android:background="#fff"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:layout_marginStart="@dimen/dp_6"
                android:layout_centerVertical="true"
                android:src="@mipmap/user_3"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:id="@+id/imageView2" />
            <TextView
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView2"
                android:text="修改密码" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_right"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_address"
            android:background="#fff"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:layout_marginStart="@dimen/dp_6"
                android:layout_centerVertical="true"
                android:src="@mipmap/user_4"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:id="@+id/imageView3" />
            <TextView
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView3"
                android:text="修改地区" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_right"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_sex"
            android:background="#fff"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:layout_marginStart="@dimen/dp_6"
                android:layout_centerVertical="true"
                android:src="@mipmap/user_5"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:id="@+id/imageView4" />
            <TextView
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView4"
                android:text="修改性别" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_right"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_jifen"
            android:background="#fff"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <ImageView
                android:layout_marginStart="@dimen/dp_6"
                android:layout_centerVertical="true"
                android:src="@mipmap/user_6"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:id="@+id/imageView5" />
            <TextView
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView5"
                android:text="查看积分" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_right"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
        </RelativeLayout>



        <RelativeLayout
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">
            <TextView
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:text="消息推送" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_right"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
        </RelativeLayout>


        <RelativeLayout
            android:background="#fff"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <TextView
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:text="订单提醒" />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_right"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>

